<form method="post" asp-page-handler="TryRegisterUser">
    <div class="form-outline mb-4">
        <input class="form-control form-control-lg" asp-for="@Model.user.UserName">
        <label class="form-label" for="form3Example1cg">Your Name</label>
    </div>

    <div class="form-outline mb-4">
        <input class="form-control form-control-lg" type="email" asp-for="@Model.user.UserEmail">
        <label class="form-label" for="form3Example3cg">Your Email</label>
    </div>

    <div class="form-outline mb-4">
        <input class="form-control form-control-lg" type="password" asp-for="@Model.user.UserPassword">
        <label class="form-label" for="form3Example4cg">Password</label>
    </div>

